<Window x:Class="BowieD.Unturned.NPCMaker.BetterForms.Universal_ListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.BetterForms"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Title="Universal_ListView" MinWidth="256" MinHeight="128" Height="256" Width="400" Icon="{DynamicResource app_Icon}">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="gridScale"/>
        </Grid.LayoutTransform>
        <ScrollViewer Margin="10,10,10,49">
            <StackPanel x:Name="mainGrid" />
        </ScrollViewer>
        <Button Click="AddButton_Click" Name="addButton" VerticalAlignment="Bottom" Height="34" Margin="10,0,10,10"/>
    </Grid>
</Window>
